<h2>New book</h2>
<%= form_with model:@book_new,local true do |f| %>
  <h4>Title</h4>
  <%=f.text_field :title %>
  <h4>Opinion</h4>
  <%=f.text_area :body %> </br>
  <%=f.submit "new create" %>
<% end %>


<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
  <tbody>
    <tr><% @book.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
       <% end %>
    </tr>
  </tbody>
</table>
